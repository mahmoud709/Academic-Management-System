          </div>
          <div class="text-center text-lg-start mt-4 pt-2">
              <form>
                <label>
                  <input type="radio" name="user-type" value="admin">
                  Admin
                </label>
                <br>
                <label>
                  <input type="radio" name="user-type" value="student">
                  Student
                </label>
                <br>
                <label>
                  <input type="radio" name="user-type" value="doctor">
                  Doctor
                </label>
                <br><br>
                <input type="submit" value="Login">
              </form>
          </div>
        </form>
      </div>
    </div>
  </div>
